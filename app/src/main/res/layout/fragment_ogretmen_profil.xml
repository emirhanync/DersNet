<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageogretmen"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="46dp"
        android:background="@color/white"
        android:contentDescription="@string/adi"
        android:scaleType="fitXY"
        android:src="@drawable/ogretmen" />

    <TextView
        android:id="@+id/ogretmenadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageogretmen"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/app_namee"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ogretmentc"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ogretmenadi"
        android:layout_marginStart="10sp"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"
        android:text="@string/app_namee"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ogretmenbrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ogretmentc"
        android:layout_marginStart="10sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aldrich"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/app_namee"
        android:textColor="@color/black"
        android:textSize="30sp" />



    <Button
        android:id="@+id/cikisYapBtnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:elevation="15dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:text="Çıkış yap"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:textSize="20dp"
        android:visibility="visible"
        app:backgroundTint="@color/dersnet_red"
        app:shapeAppearanceOverlay="@style/Button5" />
</RelativeLayout>