<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ogretmen_sayfa">


    <FrameLayout
        android:id="@+id/ogretmensayfa_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/smoothBarId" />

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/smoothBarId"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:backgroundColor="@color/dersnet_red"
        app:cornerRadius="20dp"
        app:indicatorRadius="7dp"
        app:menu="@menu/menuadmin" />
</RelativeLayout>